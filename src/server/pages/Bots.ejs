    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TopBots</title>
    <%- include("./components/header.ejs") %>
</head>
<body>
    <%- include("./components/navbar.ejs", { bot, user }) %>

    <div class="container">
        <div class="jumbotron" style="background-color: #2C2F33;border-radius: 10px;">
            <h2 class="" style="color: azure;text-align: center;"><strong>TopBots</strong></h2>
            <p style="color: azure;text-align: center;">Лучшие Discord боты в одном месте</p>
            <div style="padding-left: 350px;" class="form-inline my-2 my-lg-0">
                <input id="search-box" class="form-control" type="text" style="opacity: .5;border-radius: 10px;padding-right: 20%;" placeholder="у меня на локал хосте все нормально.(c) d1m0s23 2020" autocomplete="off">
                <button id="search-btn" class="btn btn-light my-2 my-sm-0"  style="background-color: #00ccff;border-radius: 10px;color: #ffffff;" type="button">Поиск</button>
            </div>
        </div>
        <br>
        <div class="bots-box">
            <h4>Боты</h4>	
            <% if (search) { %>
                <p style="color: white;" >Результаты поиска <strong><%= search %></strong></p>
            <% } %>
            <% for(let i = 0; i < bots.length; i++) { %>
                <div class="row">
                    <% for(let j = 0; j < bots[i].length; j++) { %>
                        <div class="col-md-3 mb-3 bot-card-col">
                            <div class="card">
                                <% if (bots[i][j].avatar) { %>
                                    <img class="card-img-top" src="https://cdn.discordapp.com/avatars/<%= bots[i][j].botID %>/<%= bots[i][j].avatar %>.png?size=1280" alt="<%= bots[i][j].tag %>">
                                <% } else { %>
                                    <img class="card-img-top" src="https://cdn.discordapp.com/embed/avatars/<%= (bots[i][j].botID % 5) %>.png" alt="<%= bots[i][j].tag %>">
                                <% } %>
                                <div class="card-body">
                                    <h4 class="card-title" style="margin-bottom: 0;"><%= bots[i][j].tag %></h4>
                                    <center>
                                        <div class="badges">
                                            <span class="badge badge-success">Онлайн</span>
                                            <span class="badge badge-primary">Серверов: <%= bots[i][j].guildsCount %></span>
                                            <span class="badge badge-danger">Голосов: <%= bots[i][j].upvotes %></span>
                                        </div>
                                    </center>
                                    <p class="card-text"><%= bots[i][j].shortDesc.length > 100 ? bots[i][j].shortDesc.substr(0, 97) + "..." : bots[i][j].shortDesc %></p>
                                    <div class="btn-group" id="bot-card-bottons" role="group" aria-label="Basic example" style="width: 100%;">
                                        <style>
                                            /* Появление границ */
.viewbutt {
  display: inline-block;
  vertical-align: middle;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  box-shadow: 0 0 1px rgba(0, 0, 0, 0);
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  -moz-osx-font-smoothing: grayscale;
  position: relative;
  overflow: hidden;
}
.viewbutt:before {
  content: "";
  position: absolute;
  z-index: -1;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  border-color: #2098d1;
  border-style: solid;
  border-width: 0;
  -webkit-transition-property: border-width;
  transition-property: border-width;
  -webkit-transition-duration: 0.1s;
  transition-duration: 0.1s;
  -webkit-transition-timing-function: ease-out;
  transition-timing-function: ease-out;
}
.viewbutt:hover:before, .viewbutt:focus:before, .viewbutt:active:before {
  -webkit-transform: translateY(0);
  transform: translateY(0);
  border-width: 4px;
}
                                        </style>
                                        <a href="/bots/<%= bots[i][j].botID %>" type="button" style="background-color: #0092ac;color: rgb(0, 0, 0);padding-right: 50px;padding-left: 50px;padding-top: 5px;" class="viewbutt">Просмотр</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
    <%- include("./components/footer.ejs") %> 
</body>

<style>
.bot-card-avatar {
    width: 100%;
    margin-bottom: 20px;
}

@media screen and (max-width: 757px) {
    .bot-card-col {
        margin: 0 30px;
    }
}
</style>
</html>
