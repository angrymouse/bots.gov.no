<style>
    @import url('https://fonts.googleapis.com/css2?family=Goldman&display=swap');
    .footer{
        background-color: #000000;
        width: 1450px;
        height: 400px;
    }
    .navbar-brand {border-radius: 10px;}
    .navbar-brand {
border: none;
color: rgb(0, 217, 255);
padding: 5px;
text-align: center;
text-decoration: none;
display: inline-block;
font-size: 16px;
margin: 4px 2px;
cursor: pointer;
transition: all 500ms ease; 
    }
    .navbar-brand:hover {
background: #ffffff;
color: #ffffff;
}

.navbar-brand::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 6px;
  background-color: #ffffff;
  border-bottom: 6px solid #00d4fa;
  transition: 2s;
}
.navbar-brand:hover::before {
  width: 100%;
}
.navbar-brand::after {
  content: '';
  position: absolute;
  bottom: -6px;
  left: 25%;
  width: 0;
  height: 6px;
  background-color: #262626;
  transition: .5s;
  transition-delay: .5s;
}
.navbar-brand:hover::after {
  width: 50%;
}  
.navbar-brand span {
  display: block;
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 6px;
  background-color: #fff;
}
.logo h2 {
  color: #fff;
  font-family: monospace;
  overflow: hidden; /* Ensures the content is not revealed until the animation */
  border-right: .15em solid orange; /* The typwriter cursor */
  white-space: nowrap; /* Keeps the content on a single line */
  margin: 0 auto; /* Gives that scrolling effect as the typing happens */
  letter-spacing: .15em; /* Adjust as needed */
  animation: 
    typing 3.5s steps(30, end),
    blink-caret .5s step-end infinite;
}

/* The typing effect */
@keyframes typing {
  from { width: 0 }
  to { width: 100% }
}

/* The typewriter cursor effect */
@keyframes blink-caret {
  from, to { border-color: transparent }
  50% { border-color: orange }
}
.logo{
    padding-left: 650px;
    
}

</style>
<footer class="footer" >
    <div class="logo">
        <a class="navbar-brand" href="/"><img src="/assets/logo.png" style="height: 100px;width: 100px;"></a>
        <h2 class="logo-text">TopBots</h2>
    </div>
</footer>