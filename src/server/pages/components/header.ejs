<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.4.2/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" id="theme" href="/static/dark.css">
<script>
$(document).ready(function() {
    const themeFromLocal = localStorage.getItem("theme");
    const themes = ["white", "dark", "ocean"];
    const currentTheme = themes.includes(themeFromLocal) ? themeFromLocal : "dark";
    $("#theme").attr("href", `/static/${currentTheme}.css`);
});
</script>
<button onclick="topFunction()" id="myBtn" title="Вверх"><img src="./assets/upload.png" ></img></button>
        <script>
            window.onscroll = function() {scrollFunction()};

function scrollFunction() {
    if (document.body.scrollTop > 1250 || document.documentElement.scrollTop > 1250) {
        document.getElementById("myBtn").style.display = "block";
    } else {
        document.getElementById("myBtn").style.display = "none";
    }
}


function topFunction() {
    document.body.scrollTop = 0; 
    document.documentElement.scrollTop = 0; 
}

        </script>
